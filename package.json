{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend do Anunciar Graja√∫",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "backup": "node scripts/backup.js",
    "backup:s3": "node scripts/backup.js --s3",
    "check-env": "node -r ts-node/register src/utils/checkEnv.ts",
    "pre-deploy": "node scripts/pre-deploy-check.js",
    "deploy:setup": "npm install && npm run prisma:generate && npm run build",
    "deploy:start": "pm2 start ecosystem.config.js",
    "deploy:restart": "pm2 restart anunciar-grajau-api",
    "deploy:stop": "pm2 stop anunciar-grajau-api",
    "deploy:logs": "pm2 logs anunciar-grajau-api",
    "deploy:status": "pm2 status anunciar-grajau-api",
    "create-admin": "ts-node src/scripts/createAdminUser.ts",
    "create-admin-with-clerk": "ts-node src/scripts/createAdminWithClerk.ts",
    "setup-notifications": "ts-node src/scripts/setupNotifications.ts",
    "ensure-admin": "ts-node src/scripts/ensureAdminUser.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.525.0",
    "@clerk/clerk-sdk-node": "^4.13.22",
    "@prisma/client": "^5.22.0",
    "@sentry/node": "^7.120.3",
    "@sentry/profiling-node": "^1.3.5",
    "@types/morgan": "^1.9.9",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mercadopago": "^1.5.16",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "resend": "^3.2.0",
    "sanitize-html": "^2.14.0",
    "slugify": "^1.6.6",
    "svix": "^1.60.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mercadopago": "^1.5.11",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.24",
    "@types/sanitize-html": "^2.13.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "prisma": "^5.10.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
