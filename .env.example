# Banco de dados
DATABASE_URL="postgresql://usuario:senha@localhost:5432/anunciar_grajau"
DIRECT_URL="postgresql://usuario:senha@localhost:5432/anunciar_grajau"

# Autenticação
JWT_SECRET="seu-segredo-jwt"
JWT_EXPIRES_IN="1d"

# Email
RESEND_API_KEY="sua-chave-api-resend"
EMAIL_FROM="no-reply@anunciargrajau.com.br"

# Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN="seu-token-mercado-pago"
MERCADO_PAGO_PUBLIC_KEY="sua-chave-publica-mercado-pago"

# Aplicação
PORT=3000
NODE_ENV="development"
API_URL="http://localhost:3000"
FRONTEND_URL="http://localhost:5173"

# Segurança
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX=100  # 100 requisições por janela

# Monitoramento
SENTRY_DSN="sua-dsn-do-sentry"
ENABLE_PERFORMANCE_MONITORING=false

# Logging
LOG_LEVEL="debug"  # production: info
LOG_RETENTION_DAYS=14

# Backup
BACKUP_ENABLED=true
BACKUP_FREQUENCY="daily"  # daily, weekly, monthly
BACKUP_TIME="03:00"  # 3 AM
BACKUP_RETENTION_DAYS=7

# AWS (para backups no S3)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="sua-access-key"
AWS_SECRET_ACCESS_KEY="sua-secret-key"
S3_BACKUP_BUCKET="nome-do-bucket-de-backup" 